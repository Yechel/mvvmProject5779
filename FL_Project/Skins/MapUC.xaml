        <syncfusion:SfMap x:Name="map">
            <syncfusion:SfMap.Layers>
                <syncfusion:ShapeFileLayer x:Name="SFL" Uri="C:\Users\יחיאל\Source\Repos\FL_Project\FL_Project\Maps\Israel.shp"  Background="GhostWhite">

                    <syncfusion:ShapeFileLayer.Annotations>
                        <syncfusion:MapAnnotations Latitude="31.76367679378092" Longitude="35.22701968033334" AnnotationLabel="ירושלים" AnnotationLabelFontFamily="Times New Roman" AnnotationLabelFontSize="20" AnnotationLabelFontStyle="Oblique" AnnotationLabelForeground="Black" >
